#!/usr/bin/env bash

# fail fast
set -eu

indent() {
  sed -u 's/^/       /'
}

# parse args
export BUILD_DIR=$1

BP_DIR="$(cd "$(dirname "$0")" && pwd)"
NGROK_DOWNLOAD_URL="https://bin.equinox.io/c/bNyj1mQVY4c/ngrok-v3-stable-linux-amd64.tgz"

echo -n "-----> Installing ngrok... "
mkdir -p $BUILD_DIR/.heroku/bin
curl --silent --retry 3 -o ngrok.tgz -L $NGROK_DOWNLOAD_URL | indent
tar xvzf ngrok.tgz -C $BUILD_DIR/.heroku/bin > /dev/null 2>&1
chmod +x $BUILD_DIR/.heroku/bin/ngrok

echo " done"

mkdir -p $BUILD_DIR/.profile.d
cat << EOF > $BUILD_DIR/.profile.d/ngrok.sh
export PATH=\$HOME/.heroku/bin:\$PATH
EOF
